[Unit]
Description=Gunicorn instance to serve chatbot_api
After=network.target

[Service]
User=Kundan
Group=ChatBot
WorkingDirectory=/home/ubuntu/ChatBotAPI/flask_api
Environment="PATH=/home/ubuntu/ChatBotAPI/venv_api/bin"
ExecStart=/home/ubuntu/ChatBotAPI/venv_api/bin/gunicorn -w 4 -b 127.0.0.1:5000 run:app

[Install]
WantedBy=multi-user.target

